<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wessel.PilsFinder">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="dc195ddd-af25-4ca6-a090-7d310d20c502" />

        <activity
            android:name=".controller.activity.MapActivity"
            android:label="Map">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".controller.activity.PubActivity"></activity>
        <activity android:name=".controller.activity.PubDetailedActivity"></activity>
        <activity android:name=".controller.activity.BeerActivity"></activity>
        <activity android:name=".controller.activity.BeerDetailedActivity"></activity>
        <activity android:name=".controller.activity.WayPointActivity"></activity>
    </application>
</manifest>